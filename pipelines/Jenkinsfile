pipeline {
    agent { label "built-in"}

    environments {
        PROJECT_PATH = "employee-ui"
    }

    stages{
        stage("Resource"){
            steps {
                dir("$WORKSPACE/$PROJECT_PATH"){
                    checkout scmGit(branches: [[name: '*/master']], extensions: [], 
                    userRemoteConfigs: [[url: 'https://github.com/leangsengk90/employee-ui.git']])
                }
            }
        }

        stage("Configuration"){
            steps {
                sh """
                    cp pipelines/Dockerfile $WORKSPACE/$PROJECT_PATH
                """
            }
        }

        stage("Build"){
            steps {
                dir("$WORKSPACE/$PROJECT_PATH"){
                    sh """
                        docker build -t employee-ui:$BUILD_NUMBER -f Dockerfile .
                    """
                }
            }
        }
    }

}
